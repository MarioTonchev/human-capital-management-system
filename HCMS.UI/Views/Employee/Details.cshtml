@model HCMS.Core.DTOs.Employee.EmployeeDto

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 500px; width: 100%;">
        <div class="card-body text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" fill="#6c757d" class="bi bi-person-circle mb-3" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
            </svg>

            <h3 class="card-title mb-3">@Model.FirstName @Model.LastName</h3>   

            <p class="mb-1"><strong>Job Title:</strong> @Model.JobTitle</p>

            <p class="mb-1"><strong>Email:</strong> @Model.Email</p>

            <p class="mb-1"><strong>Department:</strong> @(Model.DepartmentName ?? "N/A")</p>

            <p class="mb-0"><strong>Salary:</strong> @Model.Salary.ToString("C")</p>
        </div>
    </div>
</div>
